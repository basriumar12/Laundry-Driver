<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.samyotech.laundrydriver">

    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.CALL_PHONE" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:name="com.samyotech.laundrydriver.GlobalState"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:requestLegacyExternalStorage="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true"
        tools:replace="android:allowBackup,android:supportsRtl">
        <activity android:name="com.samyotech.laundrydriver.ui.activity.otp.OtpActivity"
            android:launchMode="singleTop"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateAlwaysVisible"
           />
        <activity
            android:name="com.samyotech.laundrydriver.ui.activity.about.About"
            android:label="@string/title_activity_about" />
        <activity
            android:name="com.samyotech.laundrydriver.ui.activity.notif.NotificationActivity"
            android:launchMode="singleTop" />

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="AIzaSyBjwJISIDoiwfMcS9ue6RwZ-GsvLhp2seg" />

        <activity
            android:name="com.samyotech.laundrydriver.ui.activity.welcome.WelcomeScreens"
            android:exported="true"
            android:launchMode="singleTop"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateAlwaysHidden" />
        <activity
            android:name="com.samyotech.laundrydriver.ui.activity.manage.ManageProfile"
            android:launchMode="singleTop"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateAlwaysHidden" />
        <activity
            android:name="com.samyotech.laundrydriver.ui.activity.tiket.TicketChatActivity"
            android:launchMode="singleTop"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateAlwaysHidden" />
        <activity
            android:name="com.samyotech.laundrydriver.ui.activity.dashboard.Dashboard"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.samyotech.laundrydriver.ui.activity.login.ForgotPassword"
            android:launchMode="singleTop"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.samyotech.laundrydriver.ui.activity.login.Login"
            android:launchMode="singleTop"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.samyotech.laundrydriver.ui.activity.register.Register"
            android:launchMode="singleTop"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.samyotech.laundrydriver.ui.activity.ChatActivity"
            android:launchMode="singleTop"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.samyotech.laundrydriver.ui.activity.tiket.TicketsActivity"
            android:launchMode="singleTop"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.samyotech.laundrydriver.ui.activity.manage.ChangPassword"
            android:launchMode="singleTop"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.samyotech.laundrydriver.ui.activity.ChatList"
            android:launchMode="singleTop"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.samyotech.laundrydriver.utils.MainFragment"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateAlwaysHidden" />
        <activity
            android:name="com.samyotech.laundrydriver.ui.activity.IpayMuPayment"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateAlwaysHidden" />
        <activity
            android:name="com.samyotech.laundrydriver.MainActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            <intent-filter android:label="WinLaundry">
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data
                    android:host="laundryapp.windigitalkhatulistiwa.com"
                    android:pathPrefix="/app"
                    android:scheme="http" />
                <!-- note that the leading "/" is required for pathPrefix -->
            </intent-filter>
            <intent-filter android:label="WinLaundry">
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data
                    android:host="winlaundry"
                    android:scheme="app" />
                <!-- note that the leading "/" is required for pathPrefix -->
            </intent-filter>
        </activity>
        <activity
            android:name="com.schibstedspain.leku.LocationPickerActivity"
            android:label="@string/leku_title_activity_location_picker"
            android:parentActivityName="com.samyotech.laundrydriver.ui.activity.dashboard.Dashboard"
            android:theme="@style/AppTheme.Map"
            android:windowSoftInputMode="adjustPan">
            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />
            </intent-filter>

            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/leku_searchable" />
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.samyotech.laundrydriver.ui.activity.dashboard.Dashboard" />
            <meta-data
                android:name="com.google.firebase.messaging.default_notification_icon"
                android:resource="@mipmap/ic_launcher_round" />
            <meta-data
                android:name="com.google.android.gms.version"
                android:value="@integer/google_play_services_version" />
        </activity>

        <service
            android:name="com.samyotech.laundrydriver.MyFirebaseMessagingService"
            android:exported="false">
            <intent-filter>
                <action android:name="com.google.firebase.INSTANCE_ID_EVENT" />
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>

        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="com.samyotech.laundrydriver.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/filepaths" />
        </provider>

        <!--            android:permission="com.google.android.gms.auth.api.phone.permission.SEND"-->
        <!--            -->
        <receiver android:name="com.samyotech.laundrydriver.widget.SmsBroadcastReceiver" android:exported="true"
            android:permission="com.google.android.gms.auth.api.phone.permission.SEND"
            >
            <intent-filter>
                <action android:name="com.google.android.gms.auth.api.phone.SMS_RETRIEVED"/>
            </intent-filter>
        </receiver>
    </application>

</manifest>